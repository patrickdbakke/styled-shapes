{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 10,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "plugin:import/recommended",
        "plugin:import/typescript",
        "airbnb-typescript",
        "prettier",
        "prettier/react",
        "prettier/@typescript-eslint"
    ],
    "plugins": [
        "react-hooks",
        "@typescript-eslint/eslint-plugin",
        "testing-library"
    ],
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "no-plusplus": "off",
        "no-continue": "off",
        "react/jsx-props-no-spreading": "off",
        "react/destructuring-assignment": "off",
        "no-multi-assign": "off"
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "parserOptions": {
                "project": ["tsconfig.json"]
            }
        }
    ]
}
